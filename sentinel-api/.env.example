# Server
NODE_ENV=development
PORT=3000
API_BASE_URL=https://localhost

# MongoDB
MONGODB_URI=mongodb+srv://<user>:<pass>@<cluster>.mongodb.net/sentinel

# JWT
JWT_SECRET=<random-256-bit-string>
JWT_EXPIRY=24h

# Encryption
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=<random-256-bit-key-for-aes-256>

# Google OAuth
GOOGLE_CLIENT_ID=<your-google-oauth-client-id>

# AI Provider (anthropic | gemini, default: anthropic)
AI_PROVIDER=anthropic

# Anthropic (required when AI_PROVIDER=anthropic - default)
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-sonnet-4-6

# Gemini (required when AI_PROVIDER=gemini)
GEMINI_API_KEY=AIza...
GEMINI_MODEL=gemini-2.0-flash

# Slack
SLACK_BOT_TOKEN=xoxb-...
SLACK_SIGNING_SECRET=<signing-secret>
SLACK_APP_TOKEN=xapp-...
SLACK_CLIENT_ID=<client-id>
SLACK_CLIENT_SECRET=<client-secret>

# Windsor.ai (default/fallback)
WINDSOR_DEFAULT_API_KEY=<optional-default-key>

# Frontend (for CORS)
FRONTEND_URL=https://localhost
